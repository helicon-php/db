{
    "name": "helicon/db",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Helicon\\Db\\": "src/"
        },
        "files": [
            "src-functions/classname.php",
            "src-functions/schema.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Helicon\\Db\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "poildog",
            "email": "polidogs@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "nilportugues/sql-query-builder": "^1.8",
        "helicon/object-mapper": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.23",
        "phpunit/phpunit": "^10.3"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "cs-fixer": "./vendor/bin/php-cs-fixer fix"
    }
}
